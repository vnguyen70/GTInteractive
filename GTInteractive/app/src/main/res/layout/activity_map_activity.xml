<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vi_tu.gtinteractive.buildingDetail_info">

    <Button
        android:id="@+id/filterButton"
        android:layout_width="97dp"
        android:layout_height="59dp"
        android:layout_marginStart="280dp"
        android:text=" Filters"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Print"
        app:layout_constraintBottom_toTopOf="@+id/filterButton"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/diningButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Dine"
        app:layout_constraintBottom_toTopOf="@+id/printButton"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/parkingButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Park"
        app:layout_constraintBottom_toTopOf="@+id/diningButton"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintRight_toRightOf="parent" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="450dp"
        android:layout_height="700dp"
        android:layout_marginRight="0dp"
        map:layout_constraintRight_toRightOf="parent"
        tools:context="com.example.vi_tu.gtinteractive.MainMapActivity"
        tools:layout_editor_absoluteY="-95dp" />

</android.support.constraint.ConstraintLayout>
